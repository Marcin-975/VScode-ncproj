{
    "name": "ncproj",
    "displayName": "NC Project",
    "description": "NC Project is an integrated programming environment for text files dedicated to numerically controlled machine tools, the syntax of which is based on G-codes.",
    "author": "Janusz Rupar, Marcin Cie≈õlik",
    "homepage": "https://github.com/jmr1/vscode-ncproj/blob/main/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/jmr1/vscode-ncproj.git"
    },
    "license": "Apache 2.0",
    "version": "0.0.1",
    "icon": "images/icon.png",
    "publisher": "jrupar-mcieslik",
    "categories": [],
    "activationEvents": [
        "onLanguage:ncproj",
        "onCommand:ncproj.ncsettings"
    ],
    "contributes": {
        "configuration": {
            "title": "NC Project VSCode Language Server Configuration",
            "type": "object",
            "properties": {
                "ncproj.log-file-path": {
                    "type": "string",
                    "default": "",
                    "description": "Specifies the path to a log file. Requires a VSCode restart to take effect."
                },
                "ncproj.ncsetting-file-path": {
                    "type": "string",
                    "default": "",
                    "description": "Specifies the path to a .ncsetting file. Requires a VSCode restart to take effect."
                }
            }
        },
        "languages": [
            {
                "id": "ncproj",
                "extensions": [
                    ".nc",
                    ".txt",
                    ".ptp",
                    ".dat",
                    ".mcd",
                    ".spf"
                ],
                "aliases": [
                    "NC Project",
                    "ncproj"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ncproj",
                "scopeName": "source.ncproj",
                "path": "./syntaxes/ncproj.tmLanguage.json"
            }
        ],
        "debuggers": [],
        "commands": [
            {
                "command": "ncproj.ncsettings",
                "title": "NC Project: Control and Machine Tool configuration"
            }
        ]
    },
    "main": "./vscode-client/out/extension",
    "scripts": {
        "vscode:prepublish": "cd vscode-client && npm run compile && cd ..",
        "compile": "cd vscode-client && tsc -p ./ && cd ..",
        "watch": "cd vscode-client && tsc -watch -p ./ && cd .."
    },
    "dependencies": {
        "path-exists": "^4.0.0",
        "vscode-languageclient": "^8.0.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.71.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    },
    "engines": {
        "vscode": "^1.71.0"
    }
}